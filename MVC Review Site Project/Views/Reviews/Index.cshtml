@model IEnumerable<MVC_Review_Site_Project.Models.Review>

@{
    ViewBag.Title = "Index";
}

<h3>Reviews</h3>

<div class="img-3">
    <img src="~/Images/2843137-80x80_1236877835_avatars_funny_dancing_banana.gif" />
</div> 
<div class="row">
    @foreach (var item in Model)
    {


        <div class="col-md-4">
            <div class="thumbnail">
                <div class="caption">
                    <h5>LOCATION:</h5>
                    <h3>@Html.DisplayFor(modelItem => item.Category.Name)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Name)</p>
                    <p><span class="label label-default">@Html.DisplayFor(modelItem => item.PublishDate)</span>&nbsp;<strong>@Html.DisplayNameFor(model => model.PublishDate)</strong></p>
                    <p>@Html.DisplayFor(modelItem => item.Rating)</p>
                    <p>@Html.DisplayNameFor(model => model.Description)</p>
                    @*@<p><a href="#" class="btn btn-primary" role="button">Details</a></p>*@
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn-primary", role = "button" })
                    
                </div>
            </div>
        </div>
    }
</div>



